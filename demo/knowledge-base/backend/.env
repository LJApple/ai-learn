# Application Settings
API_V1_PREFIX=/api/v1
PROJECT_NAME=Enterprise Knowledge Base
VERSION=1.0.0

# Security
SECRET_KEY=change-this-to-a-random-string-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Database - PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=kb_user
POSTGRES_PASSWORD=kb_password
POSTGRES_DB=knowledge_base

# Vector Database - Milvus
MILVUS_HOST=milvus
MILVUS_PORT=19530
MILVUS_COLLECTION_NAME=knowledge_chunks_v2
MILVUS_DIMENSION=512

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# LLM Settings
# Options: vllm, openai, azure
LLM_TYPE=openai
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-3.5-turbo
LLM_API_KEY=your-openai-api-key-here
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048
LLM_TOP_P=0.9

# HuggingFace Mirror
HF_ENDPOINT=https://hf-mirror.com

# Embedding Settings
EMBEDDING_MODEL=BAAI/bge-small-zh-v1.5
EMBEDDING_DEVICE=cpu
EMBEDDING_DIMENSION=512
EMBEDDING_BATCH_SIZE=32

# Rerank Settings
RERANK_MODEL=BAAI/bge-reranker-v2-m3
RERANK_DEVICE=cpu
RERANK_TOP_K=10

# RAG Settings
CHUNK_SIZE=512
CHUNK_OVERLAP=100
TOP_K_RETRIEVAL=10
SCORE_THRESHOLD=0.3

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=./data/files
MAX_FILE_SIZE=104857600

# MinIO Settings (if using MinIO)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=knowledge-base
MINIO_SECURE=False

# CORS (comma-separated)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
